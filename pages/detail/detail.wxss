/* pages/detail/detail.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;

}
.header {
  margin: 40rpx 30rpx 0rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
  
}
.header-two{
  display:flex;
  flex-direction: row;
}
.article-title {
  font-size: 44rpx;
}

.news-source::before {
  
  color: #909090;
  font-size: 26rpx;
  
}

.news-source {
  color: #909090;
  font-size: 26rpx;
  margin-top: 28rpx;
  margin-bottom: 20rpx;
  width: 20%;
}
.news-read-record{
  color: #909090;
  font-size: 26rpx;
  margin-top: 28rpx;
  margin-bottom: 20rpx;
  width: 10%;
}
.news-date{
  color: #909090;
  font-size: 26rpx;
  margin-top: 28rpx;
  margin-bottom: 20rpx;
  width: 70%;
}
.content {
  margin:30rpx 30rpx 30rpx 30rpx;
  /* overflow: hidden; */
  line-height: 1.5;
  box-sizing: border-box;
  word-break:break-word;
  display:block;
}

.article-content {
  color: #000;
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  text-align: justify;
}
